{
  "containerDefinitions": [
    {
      "name": "chap02-container",
      "image": "814943008023.dkr.ecr.ap-northeast-2.amazonaws.com/chap02-aws-deploy:latest",
      "cpu": 256,
      "memory": 307,
      "memoryReservation": 205,
      "portMappings": [
        {
          "name": "chap02-container-8080-tcp",
          "containerPort": 8080,
          "hostPort": 80,
          "protocol": "tcp",
          "appProtocol": "http"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "ap-northeast-2"
        },
        {
          "name": "RDS_DATABASE",
          "value": "menudb"
        },
        {
          "name": "AWS_S3_BUCKET",
          "value": "menu-images-2025-yk"
        },
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "aws"
        },
        {
          "name": "RDS_ENDPOINT",
          "value": "menu-management-db.cacsrxxgju2j.ap-northeast-2.rds.amazonaws.com"
        },
        {
          "name": "STORAGE_TYPE",
          "value": "s3"
        },
        {
          "name": "RDS_USERNAME",
          "value": "postgres"
        }
      ],
      "environmentFiles": [],
      "mountPoints": [],
      "volumesFrom": [],
      "ulimits": [],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/chap02-task-definition",
          "awslogs-create-group": "true",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        },
        "secretOptions": []
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/actuator/health || exit 1"
